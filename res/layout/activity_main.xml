<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.bjtu.fileexplorer.MainActivity" >

    <TextView
        style="@style/text_title_style"
        android:text="文件管理"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        />
    <LinearLayout 
        android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
	style="@style/text_title_style1"
        >
       <ImageButton 
            android:id="@+id/ivb_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_copy"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            />
        
        <ImageButton
            android:id="@+id/ivb_paste" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_paste"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/ivb_multi_choose" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_select"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/ivb_show_type" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toolbar_mode_icon"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        
        
    </LinearLayout>
        <LinearLayout
        android:layout_width="fill_parent"	
        android:layout_height="25dp"
        android:orientation="vertical"
	style="@style/text_title_style1"
	        android:gravity="center_vertical"
         >
	    <TextView 
	        android:id="@+id/tv_path"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="/SDCard"
	        android:textColor="#ffffff"
	        android:paddingLeft="3dp"
	        android:singleLine="true"
	        android:focusable="true"
	        android:focusableInTouchMode="true"
	        android:ellipsize="marquee"
	        android:marqueeRepeatLimit="marquee_forever"
	        />
    </LinearLayout>
    <ListView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_folder"></ListView>

</LinearLayout>
